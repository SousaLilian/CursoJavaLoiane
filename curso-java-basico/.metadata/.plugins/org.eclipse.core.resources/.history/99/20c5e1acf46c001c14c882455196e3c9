package aula17;

import java.util.Scanner;

public class Exer03 {


	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);
		
		boolean infoValida = false;
		String nome, sexo, estadoCivil;
		int idade;
		double salario;
		
		do {
			
			System.out.println("Entro com o nome:");
			
			nome = scan.next();
			
			if (nome.length() >= 3) {
				infoValida = true;
			} else {
				System.out.println("Nome precisa no minimo 3 caracteres.");
			}
		} while (!infoValida);

		
		infoValida = false;
		do {

			System.out.println("Entro com a idade:");

			idade = scan.nextInt();

			if (idade >= 0 && <= 150) {
				infoValida = true;
			} else {
				System.out.println("Idade precisa ser entre 0 e 150.");
			}
		} while (!infoValida);
		
		infoValida = false;
		do {
			
			System.out.println("Entro com o salário:");
			
			salario = scan.nextDouble();
			
			if (salario > 0) {
				infoValida = true;
			} else {
				System.out.println("Nome precisa ser maior que 0.");
			}
		} while (!infoValida);
		
		infoValida = false;
		do {
			
			System.out.println("Entro com o sexo:");
			
			sexo = scan.next();
			
			if (sexo.equalsIgnoreCase("f") ||
					sexo.equalsIgnoreCase("m")) {
				infoValida = true;
			} else {
				System.out.println("Nome precisa ser 'f' ou 'm'.");
			}
		} while (!infoValida);
		
		infoValida = false;
		do {
			
			System.out.println("Entro com o estado civil:");
			
			estadoCivil = scan.next();
			
			if (estadoCivil.equalsIgnoreCase("s") ||
					estadoCivil.equalsIgnoreCase("c") ||
					estadoCivil.equalsIgnoreCase("v") ||
					estadoCivil.equalsIgnoreCase("d")) {
				infoValida = true;
			} else {
				System.out.println("Nome precisa ser 's' (solteiro), 'c' (casado), 'v' (viúvo) ou 'd' (divorciado.");
			}
		} while (!infoValida);
		
		scan.close();
}}


